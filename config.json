{
  "root": "dist/",
  "assets": {
    "base": "src/assets/",
    "dest": "dist/assets/"
  },
  "data": {
    "files": "src/data/*.json"
  },
  "js": {
    "base"  : "src/assets/js/",
    "files" : [
      "src/assets/js/**/*.js"
    ],
    "dest"  : "dist/assets/js/"
  },
  "sass": {
    "files": [
      "src/assets/sass/*",
      "src/assets/sass/**/*"
    ],
    "dest" : "dist/assets/css/"
  },
  "fonts": {
    "base" : "src/assets/webfonts/",
    "files": [
      "src/assets/webfonts/**/*"
    ],
    "dest" : "dist/assets/webfonts/"
  },
  "images": {
    "base" : "src/assets/img/",
    "files": [
      "src/assets/img/*",
      "src/assets/img/**/*"
    ],
    "dest" : "dist/assets/img/"
  },
  "pages": {
    "files": [
      "src/*.html"
    ]
  },
  "partials": {
    "base" : "src/partials/",
    "files": [
      "src/partials/**/*"
    ]
  }
}
